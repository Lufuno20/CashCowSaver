<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

        <!-- Top Row: Icon + Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/goalIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/outline_travel_luggage_and_bags_24" />


        </LinearLayout>
        <TextView
            android:id="@+id/goalTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="Goal Name"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold" />
        <!-- Status / Time Left -->
        <TextView
            android:id="@+id/goalStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Months Left"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />

        <!-- Bottom Row: Saved / Target Amount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/goalSavedAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="R5000.00"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/goalTargetAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="R10000.00"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />


        </LinearLayout>
        <ProgressBar
            android:id="@+id/goalProgressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="3dp"
            android:progress="50"
            android:max="100"
            android:progressTint="@android:color/holo_green_dark"
            android:backgroundTint="@android:color/darker_gray" />
    </LinearLayout>

        <!-- ðŸ… Medal Icon Overlay (Top-right) -->
        <ImageView
            android:id="@+id/goalMedal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|end"
            android:src="@drawable/outline_trophy_24"
            android:layout_margin="8dp"
            android:visibility="gone" />
    </FrameLayout>
</androidx.cardview.widget.CardView>
