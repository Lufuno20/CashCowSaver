<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Header with Back Arrow -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_arrow_back_ios_new_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Create Your Goal"
                android:textColor="#4F684E"
                android:textSize="35sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Input Fields -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="779dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_cornercurve"
            android:orientation="vertical">

            <!-- Place EditTexts and Buttons here -->
            <EditText
                android:id="@+id/txtgoals"
                android:layout_width="338dp"
                android:layout_height="79dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/bg_input"
                android:hint="Enter Your Goal"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="25sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/goalamount"
                android:layout_width="338dp"
                android:layout_height="79dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_input"
                android:hint="Enter Amount"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="25sp"
                android:textStyle="bold" />
            <!-- Select Icon Field -->
            <LinearLayout
                android:id="@+id/categoryselect"
                android:layout_width="338dp"
                android:layout_height="79dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_input"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:id="@+id/imgiconInput"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/outline_imagesmode_24" />

                <TextView
                    android:id="@+id/txticonInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Select Icon"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Enter Date Field -->
            <LinearLayout
                android:id="@+id/datepick"
                android:layout_width="338dp"
                android:layout_height="79dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"

                android:background="@drawable/bg_input"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/outline_calendar_month_24" />

                <TextView
                    android:id="@+id/txtdateInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Enter Date"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="147dp"
                android:layout_marginTop="185dp"
                android:background="@drawable/bg_button"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btncreate"
                    android:layout_width="308dp"
                    android:layout_height="78dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@android:color/white"
                    android:fontFamily="@font/inter_bold"
                    android:text="Create Goal"
                    android:textColor="@color/green_dark"

                    android:textSize="25sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
